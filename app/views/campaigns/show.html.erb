<%= content_for :page_title, "#{@campaign.title.titleize} | Fundraising Marketplace" %>
<% content_for(:header) do %>
  <% if params[:elements].present? %>
    <script src="https://js.stripe.com/v2/"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.payment/1.4.1/jquery.payment.js"></script>
    <script>
      // Set your Stripe publishable API key here
      Stripe.setPublishableKey("<%= ENV['PUBLISHABLE_KEY'] %>");

      $(function() {
        var $form = $('#payment-form');
        $form.submit(function(event) {
          // Clear any errors
          $form.find('.has-error').removeClass('has-error');

          // Validate the form isn't empty before requesting a token
          invalidForm = false;
          $('#payment-form input').each(function() {
            if ($(this).val() == '') { 
              $('#'+this.id).parent('.form-group').addClass('has-error');
              invalidForm = true;
            }
          });
          if (invalidForm){
            return false;
          }

          // Disable the submit button to prevent repeated clicks:
          $form.find('.submit').prop('disabled', true).html("<i class='fa fa-spinner fa-spin'></i> Making payment...");

          // Request a token from Stripe:
          Stripe.card.createToken($form, stripeResponseHandler);
          
          // Prevent the form from being submitted:
          return false;
        });

        // Formatting
        $('#number').payment('formatCardNumber');
        $('#cc_exp').payment('formatCardExpiry');

        // Determine & display the card brand
        $('#number').keyup(function() {
          card_type = $.payment.cardType($('#number').val());
          card_type ? $('#card_type').html("<i class='text-success fa fa-cc-"+card_type+"'></i>") : $('#card_type').html("");
        });
      });

      function stripeResponseHandler(status, response) {
        var $form = $('#payment-form');

        if (response.error) {
          // Show the errors on the form
          $form.find('.payment-errors').text(response.error.message).addClass('alert alert-danger');
          $form.find('#' + response.error.param).parent('.form-group').addClass('has-error');
          $form.find('button').prop('disabled', false).text('Pay $20'); // Re-enable submission
        } 
        else { // Token was created!
          $form.find('.submit').html("<i class='fa fa-check'></i> Payment accepted");
          // Get the token ID:
          var token = response.id;

          // Insert the token and name into the form so it gets submitted to the server:
          $form.append($('<input type="hidden" name="stripeToken" />').val(token));

          // Submit the form:
          $form.get(0).submit();
        }
      }
    </script>
  <% else %>
    <script src="https://checkout.stripe.com/checkout.js"></script>
    <script>
      $(function() {
        var handler = StripeCheckout.configure({
          key: '<%= ENV['PUBLISHABLE_KEY'] %>',
          image: 'https://stripe.com/img/documentation/checkout/marketplace.png',
          locale: 'auto',
          token: function(token) {
            $("#stripeToken").val(token.id);
            $("#checkout_form").submit();
          }
        });

        document.getElementById('checkoutBtn').addEventListener('click', function(e) {
          // Clear any errors
          $('#amount').parent('.form-group').removeClass('has-error');

          // Check for a valid amount
          if ($('#amount').val() == ''){
            $('#amount').parent('.form-group').addClass('has-error');
            e.preventDefault();
            return false;
          }
          else {
            // Set the donation amount
            var amount = $("#amount").val().replace('$','') * 100;
            var displayAmount = parseFloat(Math.floor($("#amount").val() * 100) / 100).toFixed(2);
          }

          // Open Checkout with further options:
          handler.open({
            name: 'Fundraising Marketplace',
            description: 'Donation',
            zipCode: true,
            alipay: true,
            amount: amount
          });
          e.preventDefault();
        });

        // Close Checkout on page navigation:
        window.addEventListener('popstate', function() {
          handler.close();
        });
      });
    </script>
  <% end %>
<% end %>
<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-8">
      <%= render 'layouts/messages' %>
      <% unless @campaign.active %>
        <div class="alert alert-danger">
          This campaign is no longer active.
        </div>
      <% end %>
      <div>
        <%= image_tag("#{@campaign.image}?q=50&fm=jpg&w=800&fit=max", class: "img-responsive img-thumbnail") %>
      </div>
      <h2 class="page-header text-center"><%= @campaign.title.titleize %></h2>
      <h3 class="goal text-center">
        <% if @campaign.raised %>
           <span class="raised"><%= format_amount(@campaign.raised) %></span> raised so far of <strong><%= number_to_currency(@campaign.goal) %> goal</strong>
        <% else %>
          <strong><%= number_to_currency(@campaign.goal) %> goal</strong>
        <% end %>
      </h3>
      <div class="panel panel-default topspace-lg">
        <div class="panel-body lato">
          <%= simple_format(@campaign.description) %>
        </div>
      </div>
      <h3 class="text-center page-header">Donations</h3>
      <% unless @campaign.raised.to_i > 0 %>
        This campaign has not received any donations yet.
      <% else %>
        <%= render 'donations' %>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if params[:elements].present? %>
        <%= render 'paymentform' %>
      <% else %>
        <%= render 'checkoutform' %>
      <% end %>
      <% if current_user && @campaign.user_id.eql?(current_user.id) && @campaign.active %>
        <h3 class="page-header text-center"><i class="fa fa-edit purple"></i> Your campaign</h3>
        <p>
          <%= link_to "Edit this campaign", edit_campaign_path(@campaign), 
            class: "btn btn-lg btn-primary btn-custom btn-block"%>
        </p>
        <p>
          <%= link_to "Delete this campaign", campaign_path(@campaign), method: :delete, data: { confirm: "Are you sure you want to delete this campaign?" }, class: "btn btn-lg btn-block btn-custom btn-danger" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
