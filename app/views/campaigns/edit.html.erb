<%= content_for :page_title, 'Fundraising Marketplace | Edit your campaign' %>
<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Edit your campaign</h1>
      <div class="topspace-lg">
        <%= render 'layouts/messages' %>
        <div class="panel panel-default topspace">
          <div class="panel-body">
            <%= form_for @campaign do | f | %>
              <div class="form-group">
                <%= f.label :title, "Title" %>
                <%= f.text_field :title, class: "form-control input-lg" %>
              </div>
              <div class="form-group">
                <%= f.label :goal, "Goal" %>
                <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= f.text_field :goal, class: "form-control input-lg" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :description, "Description" %>
                <%= f.text_area :description, class: "form-control input-lg" %>
              </div>
              <div class="form-group">
                <%= f.label :image, "Current image" %>
                <div>
                  <a class="campaign-image" href="javascript:void(0);" id="<%= @campaign.image %>"><%= image_tag("#{@campaign.image}?q=50&fm=jpg&w=600&fit=max", class: "img-responsive img-thumbnail img-selected") %></a>
                </div>
                <% @images.each_slice(3) do |images| %>
                  <div class="row topspace">
                    <% images.each do |img| %>
                      <div class="col-md-4">  
                        <a class="campaign-image" href="javascript:void(0);" id="<%= img.urls.raw %>"><%= image_tag("#{img.urls.thumb}", class: "img-thumbnail") %></a>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="form-group">
                <%= f.button "Update Campaign", class: "btn btn-primary btn-lg btn-block btn-custom", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating campaign..."} %>
              </div>
              <%= f.hidden_field :image %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>