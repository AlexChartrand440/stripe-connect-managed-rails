<%= content_for :page_title, 'Fundraising Marketplace | Sell a course' %>
<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Create a campaign</h1>
      <div class="topspace-lg">
        <%= render 'layouts/messages' %>
        <div class="panel panel-default topspace campaign shadow-sm">
          <div class="panel-body">
            <%= form_for @campaign do | campaign | %>
              <div class="form-group">
                <%= campaign.label :title, "Title" %>
                <%= campaign.text_field :title, class: "form-control input-lg", placeholder: "Help me send my dog to obedience school!", autofocus: true %>
              </div>
              <div class="form-group">
                <%= campaign.label :goal, "Goal" %>
                <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= campaign.text_field :goal, class: "form-control input-lg", placeholder: "200.00"%>
                </div>
              </div>
              <div class="form-group">
                <%= campaign.label :description, "Description" %>
                <%= campaign.text_area :description, class: "form-control input-lg", placeholder: "I'd like to send my dog, Lucky, to obedience school. The cost for the course is $200, and any donations help!"%>
              </div>
              <div class="form-group">
                <%= campaign.label :image, "Select an image (provided by Unsplash.it)" %>
                <% @images.each_slice(3) do |images| %>
                  <div class="row topspace">
                    <% images.each do |img| %>
                      <div class="col-md-4">  
                        <a class="campaign-image" href="javascript:void(0);" id="<%= img.urls.raw %>"><%= image_tag("#{img.urls.thumb}", class: "img-thumbnail") %></a>
                      </div>
                    <% end %>
                  </div>
                <% end %>
                <%= campaign.hidden_field :image %>
              </div>
              <div class="form-group">
                <%= campaign.button "Create Campaign", class: "btn btn-primary btn-lg btn-block btn-custom", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating campaign..."} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>