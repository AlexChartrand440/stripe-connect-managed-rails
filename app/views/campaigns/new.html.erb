<%= content_for :page_title, 'Fundraising Marketplace | Sell a course' %>
<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Create a campaign</h1>
      <div class="topspace-lg">
        <%= render 'layouts/messages' %>
        <div class="panel panel-default topspace campaign shadow-sm">
          <div class="panel-body">
            <%= form_for @campaign do | campaign | %>
              <div class="form-group">
                <%= campaign.label :title, "Title" %>
                <%= campaign.text_field :title, class: "form-control input-lg", placeholder: "Help me pay my college tuition!", value: @campaign.title || @campaign_title %>
              </div>
              <div class="form-group">
                <%= campaign.label :goal, "Goal ($20 - $1,000,000)" %>
                <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= campaign.text_field :goal, class: "form-control input-lg", placeholder: "200.00", value: @campaign.goal || @goal %>
                </div>
              </div>
              <div class="form-group">
                <%= campaign.label :description, "Description" %>
                <%= campaign.text_area :description, class: "form-control input-lg", placeholder: "My tuition is expensive! Please donate if you want to help me pay it.", value: @campaign.description || @campaign_description, rows: 4 %>
              </div>
              <div class="form-group">
                <%= campaign.label :image, "Select an image for your campaign" %>
                <%= render 'images' %>
                <%= campaign.hidden_field :image, value: @campaign.image || @campaign_image %>
              </div>
              <div class="form-group">
                <%= campaign.button "Create Campaign", class: "btn btn-primary btn-lg btn-block btn-custom", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating campaign..."} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>