<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>Transfer ID</th>
          <th>Destination</th>
          <th>Amount</th>
          <th>Deposit date</th>
        </tr>
      </thead>
      <tbody>
        <% @transfers.each do |transfer| %>
          <tr>
            <td><%= transfer.id %></td>
            <td>
              <% if transfer.type.eql?('bank_account') %>
                <%= transfer.bank_account.bank_name %> ending in <%= transfer.bank_account.last4 %>
              <% elsif transfer.type.eql?('card') %>
                <%= transfer.card.brand %> ending in <%= transfer.card.last4 %>
              <% end %>
            </td>
            <td><%= format_amount(transfer.amount) %></td>
            <td><%= format_date(transfer.date) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>